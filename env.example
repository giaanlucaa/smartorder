# Database
DATABASE_URL="postgresql://smartorder:smartorder@localhost:5432/smartorder"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Payment Service Provider (Optional - App runs in no-payment mode if not set)
# PSP_PROVIDER="payrexx" # or "datatrans"

# DataTrans Payment Provider (Optional)
# DATATRANS_MERCHANT_ID="your_merchant_id"
# DATATRANS_API_PASSWORD="your_api_password"
# DATATRANS_USE_SANDBOX="true"

# Payrexx Payment Provider (Optional)
# PAYREXX_API_KEY="your_api_key"
# PAYREXX_INSTANCE="your_instance"

# AWS S3 for file uploads (Optional)
# AWS_ACCESS_KEY_ID="your_access_key"
# AWS_SECRET_ACCESS_KEY="your_secret_key"
# AWS_REGION="eu-central-1"
# AWS_S3_BUCKET="smartorder-uploads"

# Session Secret (Required for production)
# SESSION_SECRET="your_random_session_secret_here"

# Note: Without PSP keys, the app runs in no-payment mode
# Gäste können bestellen, aber werden direkt zur Success-Seite weitergeleitet
