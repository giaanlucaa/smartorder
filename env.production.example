# Production Environment Variables for Vercel
# Copy this file and rename to .env.local for local testing

# Database (Replace with your production database URL)
DATABASE_URL="postgresql://username:password@host:port/database"

# App Configuration
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# Session Secret (REQUIRED - Generate a random string)
SESSION_SECRET="your_super_secret_session_key_here_minimum_32_characters"

# Payment Service Provider (Optional)
# PSP_PROVIDER="payrexx" # or "datatrans"

# DataTrans Payment Provider (Optional)
# DATATRANS_MERCHANT_ID="your_merchant_id"
# DATATRANS_API_PASSWORD="your_api_password"
# DATATRANS_USE_SANDBOX="false"

# Payrexx Payment Provider (Optional)
# PAYREXX_API_KEY="your_api_key"
# PAYREXX_INSTANCE="your_instance"

# AWS S3 for file uploads (Optional)
# AWS_ACCESS_KEY_ID="your_access_key"
# AWS_SECRET_ACCESS_KEY="your_secret_key"
# AWS_REGION="eu-central-1"
# AWS_S3_BUCKET="smartorder-uploads"

# Pusher for real-time updates (Optional)
# PUSHER_APP_ID="your_pusher_app_id"
# PUSHER_KEY="your_pusher_key"
# PUSHER_SECRET="your_pusher_secret"
# PUSHER_CLUSTER="eu"
